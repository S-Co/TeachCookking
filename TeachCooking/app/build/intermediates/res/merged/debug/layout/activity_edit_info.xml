<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/setting_selector"
            android:contentDescription="@string/contentprovider"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingRight="5dp"
            android:text="@string/edit_info" />

        <TextView
            android:id="@+id/save_edit_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/save"
            android:textColor="@color/Red" />
    </LinearLayout>

    <ImageView
        android:id="@+id/upload_new_user_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/contentprovider"
        android:src="@drawable/portrait" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/uploading_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/White"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edit_nick"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="@string/edit_nick"
            android:inputType="text"
            android:labelFor="@id/edit_nick"
            android:paddingLeft="15dp"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/WhiteSmoke" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/White"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/edit_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/edit_info_birthday"
                android:textColor="@color/LightGrey"
                android:textSize="12sp" />

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <RadioButton
                    android:id="@+id/sex_man"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/sex_select"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/sex_man"
                    android:textColor="@drawable/sex_text_select"
                    android:textSize="12sp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/sex_woman"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/sex_select"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/sex_women"
                    android:textColor="@drawable/sex_text_select"
                    android:textSize="12sp" >
                </RadioButton>
            </RadioGroup>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/WhiteSmoke" />

        <TextView
            android:id="@+id/edit_home"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/edit_home"
            android:textColor="@color/LightGrey"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/WhiteSmoke" />

        <EditText
            android:id="@+id/edit_self_introduce"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:hint="@string/edit_self_introduce"
            android:inputType="text"
            android:labelFor="@id/edit_nick"
            android:paddingLeft="15dp"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>