<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:fitsSystemWindows="true" >

    <ImageView
        android:id="@+id/restaurant_detail_iv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/contentprovider"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/restaurant_detail_iv"
        android:layout_alignTop="@id/restaurant_detail_iv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/restaurant_detail_iv" >

        <TextView
            android:id="@+id/restaurant_detail_rName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/r_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/restaurant_detail_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/contentprovider"
                android:src="@drawable/star40" />

            <TextView
                android:id="@+id/restaurant_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/r_avg_price" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/restaurant_detail_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/r_navigation" />

            <TextView
                android:id="@+id/restaurant_detail_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/r_tags" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/re_de_ll1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/restaurant_detail_iv"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp" >

        <TextView
            android:id="@+id/product_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_rating" />

        <TextView
            android:id="@+id/enviroment_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/enviroment_rating" />

        <TextView
            android:id="@+id/service_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/service_rating" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/re_de_ll2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/re_de_ll1"
        android:layout_marginTop="2dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="3dp" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/contentprovider"
            android:src="@drawable/wm_shoplist_titlebar_adress_icon_location" />

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/restaurant_address"
            android:textIsSelectable="true" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/contentprovider"
            android:src="@drawable/wm_shoplist_icon_nearbyfood" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/re_de_ll3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/re_de_ll2"
        android:layout_marginTop="2dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="3dp" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/contentprovider"
            android:src="@drawable/wm_icon_call" />

        <TextView
            android:id="@+id/restaurant_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/restaurant_phone" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/contentprovider"
            android:src="@drawable/wm_shoplist_icon_nearbyfood" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/re_de_ll4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/re_de_ll3"
        android:layout_marginTop="15dp"
        android:background="@color/White"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_commend" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="2dp"
            android:contentDescription="@string/contentprovider"
            android:src="@drawable/wm_icon_great" />
    </LinearLayout>

    <TextView
        android:id="@+id/recommended_dishes"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/re_de_ll4"
        android:layout_marginTop="2dp"
        android:background="@color/White"
        android:text="@string/recommended_dishes" />

</RelativeLayout>