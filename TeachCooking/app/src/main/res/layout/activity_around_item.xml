<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/around_item_iv"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:contentDescription="@string/contentprovider"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/around_item_iv"
        android:layout_alignTop="@id/around_item_iv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/around_item_iv" >

        <TextView
            android:id="@+id/around_item_rName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/r_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/around_item_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/contentprovider"
                android:src="@drawable/star40" />

            <TextView
                android:id="@+id/around_item_avg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/r_avg_price" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/around_item_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/r_navigation" />

            <TextView
                android:id="@+id/around_item_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/r_tags" />

            <TextView
                android:id="@+id/around_item_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="@string/r_distance" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>